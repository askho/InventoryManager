<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		title="{memberInfo>/name}"
		placement="Vertical">
		<content>
			<VBox
				class="sapUiSmallMargin">
				<Label text="Contact Info"
					class="sapUiSmallMarginTop"
					design="Bold" />
				<Label text="Phone"
					class="sapUiSmallMarginTop"/>
				<Text text="{memberInfo>/phone}" />
				<Label text="Email"
					class="sapUiSmallMarginTop"/>
				<Text text="{memberInfo>/email}" />
				<Label text="Address"
					class="sapUiSmallMarginTop"/>
				<Text text="{memberInfo>/address}" />
			</VBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>