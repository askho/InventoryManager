<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<Dialog
		id="addInventoryFrag"
		title="Add To Inventory">
		<Panel
			width="100%">
			<content>
				<l:VerticalLayout
					width="100%">
					<l:VerticalLayout
						width="100%">
						<Label text="Purchased At"/>
						<Input 
							id="purchasedAt"
							type="Text"
							placeholder="Begin typing for auto suggestion"
							showSuggestion="true"
							width="100%"
							suggestionItems="{path: 'oDataModel>/Inventories',
								parameters: {
									'select': 'purchasedAt'
								}}"
							value="{addInventoryItems>/purchasedAt}" >
							<suggestionItems>
								<core:Item text="{oDataModel>purchasedAt}" />
							</suggestionItems>
						</Input>
					</l:VerticalLayout>
					<l:VerticalLayout>
						<Label text="Condition"/>
						<RatingIndicator maxValue="5" class="sapUiSmallMarginBottom" value="{addInventoryItems>/condition}" />
					</l:VerticalLayout>
					<l:VerticalLayout>
						<Label text="Pricing"/>
						<Input
							id="addInventoryPrice"
							type="Number"
							class="sapUiSmallMarginBottom"
							placeholder=""
							value="{addInventoryItems>/price}" />
					</l:VerticalLayout>
					<l:VerticalLayout>
						<Label text="Quantity"/>
						<Input
							type="Number"
							id="itemQuantity"
							class="sapUiSmallMarginBottom"
							value="{addInventoryItems>/quantity}" />
					</l:VerticalLayout>
				</l:VerticalLayout>
			</content>
		</Panel>
		<beginButton>
			<Button text="Create" class="appBtnPrimary" press="addFragmentCreate"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" class="appBtnPrimary" press="addFragmentCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>