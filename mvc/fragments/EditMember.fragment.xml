<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<Dialog
		id="editMemberFrag"
		title="Edit Member">
		<Panel
			width="100%">
			<content>
				<l:VerticalLayout
					width="100%">

					<l:HorizontalLayout>
						<l:VerticalLayout>
							<Label for="fName" text="First Name"/>
							<Input
								id="fName"
								type="Text"
								value="{/fName}" >
							</Input>
						</l:VerticalLayout>
						<l:VerticalLayout>
							<Label for="lName" text="Last Name"/>
							<Input
								id="lName"
								type="Text"
								value="{/lName}" >
							</Input>
						</l:VerticalLayout>
					</l:HorizontalLayout>

					<l:VerticalLayout>
						<Label for="email" text="Email"/>
						<Input
							id="email"
							type="Text"
							value="{/email}" >
						</Input>
					</l:VerticalLayout>

					<l:VerticalLayout>
						<Label for="phone" text="Phone"/>
						<Input
							id="phone"
							type="Text"
							value="{/phone}" >
						</Input>
					</l:VerticalLayout>

					<l:VerticalLayout>
						<Label for="address" text="Address"/>
						<Input
							id="address"
							type="Text"
							value="{/address}" >
						</Input>
					</l:VerticalLayout>
				</l:VerticalLayout> <!-- end main VerticalLayout -->
			</content>
		</Panel>
		<beginButton>
			<Button text="Save" class="appBtnPrimary" press="editMember_save"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" class="appBtnPrimary" press="editFragmentCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>