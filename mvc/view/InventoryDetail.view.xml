<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.scout138.inventoryManager.mvc.controller.InventoryDetail" xmlns:l="sap.ui.layout">
    <Page title="Inventory Manager" showNavButton="{device>/isPhone}"
		navButtonPress="handleNavBack">
		<content>
			<!-- this CSS class add a standard spacing to all the page content -->

			<ObjectHeader id="title" title="{itemName}" number="{Time}"
				numberUnit="Hours">
				<attributes>
					<ObjectAttribute title="Item Name" text="{eventName}" />
					<ObjectAttribute title="Item Description" text="{temp>/ChangeRequestName}" />
				</attributes>
			</ObjectHeader>
			<IconTabBar expanded="true">
				<items>
					<IconTabFilter text="Edit">
						<Panel id="details">
						</Panel>
					</IconTabFilter>
					<IconTabFilter text="Issues">
						<FeedInput />
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
				<Button text="Save" press="save" class="appIconBtn"/>
				<Button text="Delete" icon="sap-icon://delete" press="deleteFile" class="appIconBtn"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>