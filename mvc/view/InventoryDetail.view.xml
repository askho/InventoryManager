<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.scout138.inventoryManager.mvc.controller.InventoryDetail" xmlns:l="sap.ui.layout">
    <Page title="Inventory Manager" showNavButton="{device&gt;/isPhone}" navButtonPress="handleNavBack">
        <content>
            <!-- this CSS class add a standard spacing to all the page content -->
            <ObjectHeader id="title" title="{/itemName}" number="{/total}" numberUnit="In Inventory">
                <statuses>
            <ObjectStatus
                title="{/checkedOut}"
                text="Checked Out"
                state="Warning" />
            </statuses>
                <attributes>
                    <ObjectAttribute title="Item Id" text="{/itemID}" />
                    <ObjectAttribute title="Item Description" text="{/itemDescription}" />
                </attributes>
            </ObjectHeader>
            <IconTabBar expanded="true">
                <items>
                    <IconTabFilter icon="sap-icon://activity-items">
                        <Table id="inventoryList" inset="false" items="{path: '/Inventory'}">
                            <headerToolbar>
                                <Toolbar>
                                    <Title text="Products" level="H2" />
                                </Toolbar>
                            </headerToolbar>
                            <columns>
                                <Column width="12em">
                                    <Text text="Inventory ID" />
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="Checked Out By" />
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="Purchased At" />
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                    <Text text="Condition" />
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                    <Text text="Remove From Inventory" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Text text="{inventoryID}" />
                                        <Text text="{fName} {lName}" />
                                        <Text text="{purchasedAt}" />
                                        <RatingIndicator maxValue="5" class="sapUiSmallMarginBottom" value="{
                                        	path: 'condition', formatter: '.conditionFormat'}"/>
                                        <Button text="Remove"
                                        	icon="sap-icon://delete"
                                        	class="appBtn"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="Save" press="save" class="appIconBtn" />
                <Button text="Delete" icon="sap-icon://delete" press="deleteFile" class="appIconBtn" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>