<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.scout138.inventoryManager.mvc.controller.Inventory" xmlns:l="sap.ui.layout">
    <Page id="page" title="inventoryManager">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button icon="sap-icon://menu2" press="onMenuPress" />
                </contentLeft>
                <contentMiddle>
                    <Label text="Inventory" />
                </contentMiddle>
            </Bar>
        </customHeader>
        <subHeader>
            <Toolbar>
                <SearchField
                    liveChange="onSearch"
                    width="100%" />
            </Toolbar>
        </subHeader>
        <content>
            <List items="{path: 'oDataModel>/Inventories',
                parameters: {expand:'Item'}}" class="appList" id="masterList">
                <CustomListItem class="appEventListItem" press="handlePress" type="Active" >
                    <FlexBox justifyContent="SpaceBetween">
                            <items>
                                <Text text="{oDataModel>purchasedAt}"/>
                                <Label text="{oDataModel>itemName}"/>
                            </items>
                    </FlexBox>
                    <Label text="{leader}"/>
                </CustomListItem>
            </List>
        </content>
        <footer>
            <Toolbar>
                <Button text="Add" icon="sap-icon://add" press="onAddPress" class="appIconBtn"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>